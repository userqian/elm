border-1px($color)
  position relative
  &:after
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    content ''

bg-img($img)
  background url($img + '@2x.png') no-repeat
  background-size 100% 100%
  @media (-webkit-min-device-pixel-ratio:3), (min-device-pixel-ratio:3)
    background url($img + '@3x.png') no-repeat
    background-size 100% 100%
